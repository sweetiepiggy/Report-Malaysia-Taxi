<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
>
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<TextView
			android:id="@+id/fare_label"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			style="@android:style/TextAppearance.Large"
			android:text="@string/fare" />
		<EditText
			android:id="@+id/calc_fare_entry"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			style="@android:style/TextAppearance.Large"
			android:focusable="false"
			android:editable="false"
			android:inputType="none" />

		<TextView
			android:id="@+id/distance_label"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textStyle="bold"
			android:paddingBottom="10dp"
			android:paddingLeft="10dp"
			android:paddingTop="10dp"
			android:text="@string/distance" />
		<EditText
			android:id="@+id/distance_entry"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:inputType="numberDecimal"
			android:hint="@string/distance_hint" />

		<TextView
			android:id="@+id/time_label"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textStyle="bold"
			android:paddingBottom="10dp"
			android:paddingLeft="10dp"
			android:paddingTop="10dp"
			android:text="@string/time" />
		<EditText
			android:id="@+id/time_entry"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:inputType="number"
			android:hint="@string/time_hint" />

		<TextView
			android:id="@+id/passengers_label"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textStyle="bold"
			android:paddingBottom="10dp"
			android:paddingLeft="10dp"
			android:paddingTop="10dp"
			android:text="@string/passengers" />
		<EditText
			android:id="@+id/passengers_entry"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:inputType="number"
			android:hint="@string/passengers_hint" />

		<CheckBox
			android:id="@+id/midnight_checkbox"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingBottom="10dp"
			android:paddingLeft="10dp"
			android:paddingTop="10dp"
			android:text="@string/midnight" />
		<CheckBox
			android:id="@+id/executive_checkbox"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/executive" />
		<CheckBox
			android:id="@+id/telbooking_checkbox"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/telbooking" />
	</LinearLayout>
</ScrollView>

